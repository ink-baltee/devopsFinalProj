apiVersion: apps/v1
kind: Deployment
metadata:
  name: task-app-deployment
  namespace: devops-project
spec:
  replicas: 1
  selector:
    matchLabels:
      app: task-app
  template:
    metadata:
      labels:
        app: task-app
    spec:
      containers:
      - name: webapp
        image: devops-task-app
        ports:
        - containerPort: 80
        env:
        - name: DB_HOST
          value: "mysql-service"
        - name: DB_NAME
          value: "taskdb"
        - name: DB_USER
          value: "taskuser"
        - name: DB_PASSWORD
          value: "taskpass"
